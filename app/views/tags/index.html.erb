<table class="table table-condensed table-striped table-dark table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Origin</th>
      <th>Type</th>
      <th>Light rgb</th>
      <th>Health</th>
      <th>Defence</th>
      <th>Attack</th>
      <th>Speed</th>
      <th>Last seen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.origin %></td>
        <td><%= tag.variety %></td>
        <td><%= tag.light_rgb %></td>
        <td><%= tag.health %></td>
        <td><%= tag.defence %></td>
        <td><%= tag.attack %></td>
        <td><%= tag.speed %></td>
        <td><%= tag.last_seen %></td>
        <td>
          <%= link_to tag, class: 'btn btn-sm btn-primary' do %>
            <i class="fas fa-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_tag_path(tag), class: 'btn btn-sm btn-info' do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to soft_delete_tag_path(tag), data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

